<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizationDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/org_image"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="70dp"
                android:layout_height="72dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="293dp"
                android:src="@drawable/profile" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="70dp"
                android:layout_height="72dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="184dp"
                android:layout_marginBottom="294dp"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_above="@+id/donateButton"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="359dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingRight="30dp">

                <TextView
                    android:id="@+id/org_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="Organization Name"
                    android:textColor="@color/food_donor_darker_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/org_type"
                    android:layout_width="184dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_business"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:text="Type of Organization"
                    android:textColor="@color/food_donor_black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/org_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_baseline_location"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="Location"
                    android:textColor="@color/food_donor_black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="384dp"
                    android:layout_height="43dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/phone_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_baseline_call" />

                    <ImageView
                        android:id="@+id/twitter_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/twitter_pixel_perfect" />

                    <ImageView
                        android:id="@+id/facebook_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/facebook_hight_quality_icons" />

                    <ImageView
                        android:id="@+id/instagram_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/freepik_instagram" />

                    <ImageView
                        android:id="@+id/mail_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/ic_baseline_email" />

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/donateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="140dp"
                android:layout_marginBottom="10dp"
                android:background="@color/food_donor_blue"
                android:text="Donate Now"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/donationTextView"
                android:layout_width="144dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="138dp"
                android:layout_marginTop="197dp"
                android:layout_marginEnd="129dp"
                android:layout_marginBottom="379dp"
                android:text="Food Donations"
                android:textColor="@color/food_donor_black"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="364dp"
                android:layout_height="187dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="337dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="84dp"
                app:cardBackgroundColor="@color/material_dynamic_neutral95">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="325dp"
                    android:layout_height="66dp"
                    android:layout_margin="15dp"
                    android:text="Brief Description" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="70dp"
                android:layout_height="72dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="289dp"
                android:layout_marginBottom="297dp"
                android:src="@drawable/profile" />

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>