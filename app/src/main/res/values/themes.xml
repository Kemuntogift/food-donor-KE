<resources>
  <!-- Base application theme. -->
  <style name="Theme.FoodDonorKE" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/food_donor_darker_blue</item>
    <item name="colorPrimaryVariant">@color/food_donor_darker_blue</item>
    <item name="colorOnPrimary">@color/food_donor_white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/food_donor_blue</item>
    <item name="colorSecondaryVariant">@color/food_donor_blue</item>
    <item name="colorOnSecondary">@color/food_donor_white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>
  <style name="NoActionBarStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/food_donor_darker_blue</item>
    <item name="colorPrimaryVariant">@color/food_donor_darker_blue</item>
    <item name="colorOnPrimary">@color/food_donor_white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/food_donor_blue</item>
    <item name="colorSecondaryVariant">@color/food_donor_blue</item>
    <item name="colorOnSecondary">@color/food_donor_white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
  </style>
  <style name="NormalTextStyle" parent="TextAppearance.MaterialComponents.Body1">
    <item name="android:textSize">@dimen/normal_font_size</item>
    <item name="android:textStyle">normal</item>
    <item name="fontFamily">sans-serif-condensed</item>
    <item name="android:textColor">@color/food_donor_black</item>
  </style>

  <style name="ImageButtonStyle">
    <item name="cornerRadius">@dimen/button_radius</item>
    <item name="backgroundTint">@color/food_donor_blue</item>
    <item name="android:padding">@dimen/padding_2</item>
  </style>

  <style name="BoldTextStyle" parent="NormalTextStyle">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/medium_font_size</item>
    <item name="fontFamily">sans-serif-condensed-medium</item>
    <item name="android:textColor">@color/food_donor_darker_blue</item>
  </style>

  <style name="BolderTextStyle" parent="BoldTextStyle">
    <item name="android:textSize">@dimen/large_font_size</item>
  </style>

  <style name="ButtonTextStyle" parent="BoldTextStyle">
    <item name="android:textColor">@color/food_donor_white</item>
    <item name="android:textSize">@dimen/normal_font_size</item>
  </style>

  <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="backgroundTint">@color/food_donor_blue</item>
    <item name="android:textAppearance">@style/ButtonTextStyle</item>
    <item name="android:paddingTop">@dimen/padding_1</item>
    <item name="android:paddingBottom">@dimen/padding_1</item>
    <item name="cornerRadius">@dimen/button_radius</item>
  </style>

  <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="shapeAppearanceOverlay">@style/TextInputLayoutShapeAppearance</item>
    <item name="android:textAppearance">@style/NormalTextStyle</item>
    <item name="boxStrokeColor">@color/dark_bg_stroke_color</item>
    <item name="android:textColorHint">@color/food_donor_white</item>
  </style>

  <style name="TextInputLayoutShapeAppearance">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">@dimen/card_radius</item>
  </style>

  <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
    <item name="cardUseCompatPadding">true</item>
    <item name="cardElevation">@dimen/card_elevation</item>
    <item name="cardCornerRadius">@dimen/card_radius</item>
  </style>

  <style name="OutlinedCardViewStyle" parent="CardViewStyle">
    <item name="cardElevation">0dp</item>
  </style>

  <style name="RoundedCornersStyle">
    <item name="cornerSize">12%</item>
  </style>

  <style name="CircularImageStyle">
    <item name="cornerSize">50%</item>
  </style>

  <style name="TextInputLayoutStyle2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="shapeAppearanceOverlay">@style/TextInputLayoutShapeAppearance</item>
    <item name="android:textAppearance">@style/NormalTextStyle</item>
  </style>

  <style name="InputChipStyle" parent="Widget.MaterialComponents.Chip.Entry">
    <item name="android:textAppearance">@style/NormalTextStyle</item>
  </style>
</resources>